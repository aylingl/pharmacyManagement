<Window x:Class="pharmacyManagement.forms.wndEditUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pharmacyManagement.forms"
        mc:Ignorable="d"
        Title="wndEditUsers" Height="450" Width="800"
        Loaded="window_loaded">



    <Grid Background="Transparent" 
    FlowDirection="RightToLeft" >
        <Border BorderBrush="Red" 
            Background="White"  
            BorderThickness="2"
            CornerRadius="12">
            <Grid >
                <Grid.RowDefinitions >
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>

                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Label Content="  نام و نام خانوادگی :"
                       Margin="20,0"/>

                </Grid>
                <Grid Grid.Row="1"
                  >
                    <TextBox x:Name="txtFullName"
                         Template="{StaticResource tmpTxt1 }"
                         />
                </Grid>
                <Grid Grid.Row="2">
                    <Label Content="تلفن :"
        Margin="20,0"/>

                </Grid>
                <Grid Grid.Row="3"
   >
                    <TextBox x:Name="txtPhoneNumber"
          Template="{StaticResource tmpTxt1 }"
          />
                </Grid>
                <Grid Grid.Row="4">
                    <Label Content="شغل:"
        Margin="20,0"/>

                </Grid>
                <Grid Grid.Row="5"
   >
                    <TextBox x:Name="txtJobTitle"
          Template="{StaticResource tmpTxt1 }"
          />
                </Grid>
                <Grid Grid.Row="6"
                     >
                    <Label Content="رمز عبور"
                           Margin="20,0"/>
                </Grid>
                <Grid Grid.Row="7">
                    <TextBox x:Name="txtPassword"
                             Template="{StaticResource tmpTxt1 }"/>
                </Grid>
                <Grid Grid.Row="8"
                  Margin="20,5">
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"
                    Content="ثبت"
                       Tag="/images/entryBtnForAdd.png"
                        Template="{StaticResource tmpltEnterBttn }"
                             Click="btnSubmit_click">

                    </Button>
                    <Button 
                    Grid.Column="1"
                    Content="انصراف"
                      Click="btnCancel_click" 
                    Template="{StaticResource tmpltCancelBttn }"
                    Tag="=/images/CanceleBtnForCancel.png">

                    </Button>
                </Grid>



            </Grid>
        </Border>

    </Grid>
</Window>
