<Window x:Class="pharmacyManagement.forms.wndMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pharmacyManagement.forms"
        mc:Ignorable="d"
        Title="مدیریت داروخانه" 
        Height="450" 
        Width="800"
        Loaded="window_loaded"
        WindowState="Maximized" >
    
   

    <Grid  FlowDirection="RightToLeft" >
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            
            <Border Background="{StaticResource PrimaryBlueColor }"   
                    CornerRadius="0,0,30,0">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    
                    
                    <Label   
                           FontSize="22"
                           FontWeight="ExtraBold"  
                           FontFamily="B Mitra" 
                           VerticalAlignment ="Center" 
                           Margin=" 30,0,0,0"
                           Grid.Column="0" 
                           Foreground="{StaticResource ApplicationTitleColor}"
                           />

                    <Border Grid.Column="1"
                        Background="{StaticResource MenuStatusColor}"
                        CornerRadius="10"
                        BorderThickness="2"
                        Width="150"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Right" 
                        Margin="0,0,30,0">
               
                         <TextBlock Text="..."
                               Name="labUserFullName"
                               TextTrimming="CharacterEllipsis"
                               FontSize="14"
                               FontWeight="Bold"  
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Center"  
                               Margin="7"/>
               
                    </Border>
              
                </Grid>
            
            </Border>
            
        </Grid>
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border CornerRadius="0,0,50,0"
                        Background="{StaticResource PrimaryBlueColor}" >
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions >
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Button  Grid.Row="0"
                             Content="مشتریان"
                             Tag= "/images/customerBtnImg.png" 
                             Template="{StaticResource tmpltMenuBttm}"
                             Click="customersMenuClicked"
                             
                             />
                   
                    <Button Content="کاربران"
                            Grid.Row="1"
                            Tag= "/images/usersbtnImg.png"
                            Template="{StaticResource tmpltMenuBttm }"
                            Click="usersMenuClicked"/>
                    <Button Grid.Row ="2"
                            Content="بازاریاب ها"
                            Template="{StaticResource tmpltMenuBttm}"
                            Click="visitorMenuClicked"
                             Tag= "/images/visitorBtnImge.png"/>
                    <Button Grid.Row ="3"
                            Content="شرکت ها"
                            Template="{StaticResource tmpltMenuBttm}"
                            Click="medicineCompaniesMenuClicked"
                             Tag= "/images/companyBtnImg.png"/>
                    <Button Grid.Row ="4"
                            Content="دارو ها"
                             Template="{StaticResource tmpltMenuBttm}"
                            Click="medicineMenuClicked"
                             Tag= "/images/medicineBtnImg.png"/>
                    <Button Grid.Row ="5"
                              Content="زمینه فعالیت بازاریاب" 
                              Template="{StaticResource tmpltMenuBttm}"
                            Click="visitorTypeMedicineMenuClicked"
                             Tag= "/images/visitorTypeMedBtnImg.png"/>
                    <Button Grid.Row ="6"
                                   Content="نوع دارو ها"                      
                                   Template="{StaticResource tmpltMenuBttm}"
                                 Click="medicineTypeMenuClicked"
                                    Tag= "/images/medicineTypeBtnImg.png"/>

                </Grid> 
            </Border>
            <Grid Background="AliceBlue" 
                  Grid.Column="1">
                <Border Background="{ StaticResource screenBackgroundColor }"
                        BorderBrush="{StaticResource PrimaryBlueColor }"
                        Margin="10"
                        CornerRadius="20"
                        BorderThickness="1"
                        x:Name="brdMain">
                    <!--
                    -->
                </Border>
            </Grid>
            
        </Grid>
    </Grid>
</Window>
