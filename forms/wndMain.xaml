<Window x:Class="pharmacyManagement.forms.wndMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pharmacyManagement.forms"
        mc:Ignorable="d"
        Title="مدیریت داروخانه" 
        Height="450" 
        Width="800"
        Loaded="window_loaded"
        WindowState="Maximized" 
        >



    <Grid  FlowDirection="RightToLeft" >
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              >

            <Border Background="{StaticResource PrimaryBlueColor }"   
                    CornerRadius="0,0,30,0">

                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>


                    <Border CornerRadius="8"
                             
                           BorderThickness="2"
                            Width="300"
                           Margin="16,10,0,10"
                            HorizontalAlignment="Left" 
                            BorderBrush="Aquamarine"
                            Background="Transparent" >
                        <Label 
                                 
        Content="مدیریت داروخانه حکیم"
       FontSize="22"
       Foreground="Aquamarine" 
       FontWeight="Bold"   
       FontFamily="B Mitra" 
       VerticalAlignment ="Center"
         HorizontalAlignment="Center"  
       Grid.Column="0" 
       />

                    </Border>

                    <Border Grid.Column="1"
                          MouseLeftButtonDown="userCaption_clicked"
                        Background="{StaticResource MenuStatusColor}"
                        CornerRadius="10"
                        BorderThickness="2"
                        Width="150" 
                        HorizontalAlignment="Right"   
                        Margin="20,10" Height="50" VerticalAlignment="Bottom">

                        <TextBlock Text="..."
                               Name="labUserFullName"
                               TextTrimming="CharacterEllipsis"
                               FontSize="14"
                               FontWeight="Bold"  
                               VerticalAlignment="Top" 
                               HorizontalAlignment="Center"  
                               Margin="7"/>

                    </Border>

                </Grid>

            </Border>

        </Grid>
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border CornerRadius="0,0,50,0"
                        Background="{StaticResource PrimaryBlueColor}" >
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions >
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button  Grid.Row="0"
                             Content="مشتریان"
                             Tag= "/images/customerBtnImg.png" 
                             Template="{StaticResource tmpltMenuBttm}"
                             Click="customersMenuClicked"
                             />

                    <Button Content="کاربران"
                            Grid.Row="1"
                            Tag= "/images/usersbtnImg.png"
                            Template="{StaticResource tmpltMenuBttm }"
                            Click="usersMenuClicked"/>
                    <Button Grid.Row ="2"
                            Content="بازاریاب ها"
                            Template="{StaticResource tmpltMenuBttm}"
                            Click="visitorMenuClicked"
                             Tag= "/images/visitorBtnImge.png"/>
                    <Button Grid.Row ="3"
                            Content="شرکت ها"
                            Template="{StaticResource tmpltMenuBttm}"
                            Click="medicineCompaniesMenuClicked"
                             Tag= "/images/companyBtnImg.png"/>
                    <Button Grid.Row ="4"
                            Content="دارو ها"
                             Template="{StaticResource tmpltMenuBttm}"
                            Click="medicineMenuClicked"
                             Tag= "/images/medicineBtnImg.png"/>
                    <Button Grid.Row ="5"
                              Content="زمینه فعالیت بازاریاب" 
                              Template="{StaticResource tmpltMenuBttm}"
                            Click="visitorTypeMedicineMenuClicked"
                             Tag= "/images/visitorTypeMedBtnImg.png"/>
                    <Button Grid.Row ="6"
                                   Content="نوع دارو ها"                      
                                   Template="{StaticResource tmpltMenuBttm}"
                                 Click="medicineTypeMenuClicked"
                                    Tag= "/images/medicineTypeBtnImg.png"/>

                </Grid>
            </Border>
            <Grid Background="AliceBlue" 
                  Grid.Column="1">
                <Border Background="{ StaticResource screenBackgroundColor }"
                        BorderBrush="{StaticResource PrimaryBlueColor }"
                        Margin="10"
                        CornerRadius="20"
                        BorderThickness="1"
                        x:Name="brdMain">
                    <!--
                    -->
                </Border>
            </Grid>

        </Grid>
    </Grid>
</Window>
