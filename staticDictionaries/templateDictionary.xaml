
    <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <ControlTemplate x:Key ="tmp1" TargetType="Button">
        <Border BorderBrush="Aqua"
         x:Name="brd1"
         Background="Green" 
         BorderThickness="2"
         Padding="5"
         CornerRadius="12"
         >

            <Grid >
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="1"
                x:Name="lbl1"
                Foreground="Red "
                FontSize="10" 
                FontFamily="Tahoma"
                Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Content}" />
                <Image  Source="/images/users.png" />
            </Grid>
        </Border>

    </ControlTemplate>


    <ControlTemplate x:Key="tmpltMenuBttm" TargetType="Button" >
        <Border x:Name="brd1"
                Width="170"
                Height="40"
                BorderBrush="Lavender"   
                BorderThickness="3"
                CornerRadius="8"
                Background="{StaticResource menuButtonscolor }" 
                Cursor="Hand">
            <Grid>
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width=" 50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label x:Name="lbl1"
                   Grid.Column="1"
                   Foreground="DarkBlue" 
                   FontSize="12"
                   FontWeight="Bold" 
                   Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Content}"/>
                <Image Source="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Tag}" />
            </Grid>
        </Border>
        <ControlTemplate.Triggers >
            <Trigger SourceName="brd1"  Property="IsMouseOver" Value="True" >
                <Setter TargetName="brd1" Property="Background" Value="{StaticResource menuButtonscolorMHover }" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
        

    <ControlTemplate TargetType="TextBox"
                     x:Key="tmpTxt1">

        <Border  CornerRadius="12"
              Background="{StaticResource txtBoxBackgroundColor}" 
             
              >
            <TextBox Background ="Transparent"
                  BorderBrush="Transparent"
                  Foreground="Black" 
                 FontSize="16"
                 
                  Text="{Binding Text , Mode=TwoWay,RelativeSource ={RelativeSource TemplatedParent}}"/>

        </Border>

    </ControlTemplate>



    <ControlTemplate x:Key="tmpltEnterBttn" TargetType="Button" >
        <Border x:Name="brd1"
             
             Height="40"
             CornerRadius="12"
             Background="{StaticResource bttnEnterColor }"
             Cursor="Hand">
            <Grid>
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label FontFamily="B Mitra"                     
                       x:Name="lbl1"                
                       Grid.Column="1"                
                       Foreground="White"                  
                       FontSize="16"                
                       FontWeight="Bold" 
                       VerticalContentAlignment="Center"            
                       HorizontalAlignment="Left"  
                       Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Content}"/>
                <Image Source="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Tag}" />
            </Grid>
        </Border>
        <ControlTemplate.Triggers >
            <Trigger SourceName="brd1"  Property="IsMouseOver" Value="True" >
                <Setter TargetName="brd1" Property="Background" Value="{StaticResource menuButtonscolorMHover }" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>



    <ControlTemplate x:Key="tmpltCancelBttn" TargetType="Button" >
        <Border x:Name="brd1"
        
          Height="40"
          CornerRadius="12"
          Background="{StaticResource bttnCancelColor  }"
          Cursor="Hand">
            <Grid>
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label x:Name="lbl1"
             Grid.Column="1"
                       HorizontalAlignment="Left"  
                       VerticalAlignment="Center" 
                       FontFamily="B Mitra"
             Foreground="White"  
             FontSize="16"
             FontWeight="Bold" 
             Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Content}"/>
                <Image Grid.Column="0"
                    Source="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Tag}" />
            </Grid>
        </Border>
        <ControlTemplate.Triggers >
            <Trigger SourceName="brd1"  Property="IsMouseOver" Value="True" >
                <Setter TargetName="brd1" Property="Background" Value="{StaticResource menuButtonscolorMHover }" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>