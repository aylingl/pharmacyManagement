<UserControl x:Class="pharmacyManagement.screenControls.medicineCompaniesScreenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pharmacyManagement.screenControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="control_Loaded">

    <UserControl.Resources >
        <DataTemplate x:Key="dtTemplate1">
            <Grid>
                <Grid Background="Azure"  >
                    <ListBox >
                        <ListBoxItem >
                            <Border Background="{StaticResource listItemBackgroundColor }"
                                    BorderBrush="{StaticResource PrimaryBlueColor }"
                                    CornerRadius="12"
                                    Width="1000"
                                    Height="30"
                                    BorderThickness="2">

                                <Grid Width="500">
                                    <Grid.ColumnDefinitions >
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column ="0"
                            Content="{Binding Path=name}"
                                   FontSize="14"
                                   FontWeight="Bold" 
                                           Height=" 100"/>
                                </Grid>
                            </Border>
                        </ListBoxItem>
                    </ListBox>
                </Grid>
            </Grid>

        </DataTemplate>
    </UserControl.Resources>
    <Grid >
        <ListBox  x:Name="lstMedicineCompanyView"
                   ItemTemplate="{StaticResource dtTemplate1 }"
                   Background="Transparent" 
                   BorderBrush="Transparent ">
        </ListBox>
    </Grid>
    
   
</UserControl>
