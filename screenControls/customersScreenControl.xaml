<UserControl x:Class="pharmacyManagement.screenControls.customersScreenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pharmacyManagement.screenControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="control_Loaded">
    


    <UserControl.Resources >
        <DataTemplate  x:Key="dtTemplate1"
                       >

            <ListBoxItem Background="Transparent"  
                        
                         BorderThickness="0"
                         BorderBrush="Transparent"
                         Foreground="Transparent"
                         IsSelected="False">
                <Grid HorizontalAlignment="Stretch" 
                      Background="Transparent" 
                      Width="auto">
                    <Border Background="{StaticResource listItemBackgroundColor }"
                        BorderBrush="{StaticResource PrimaryBlueColor }" 
                        BorderThickness="2"
                        Width="1000"
                         x:Name="brd1"       
                        Height="40"
                        HorizontalAlignment="Stretch" 
                        CornerRadius="12">
                            <Grid >
                                <Grid.ColumnDefinitions >
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                                <Label Grid.Column ="0"
                               Content="{Binding Path= fullName}"
                               Margin="10,0,0,0"
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center" />
                               
                                <Label Grid.Column="1"
                               Margin="50,0,0,0"
                               Content="{Binding Path= phoneNumber}"
                               FontWeight="Bold"
                                       VerticalAlignment="Center" />
                            <Button  Grid.Column="2"
                                     Cursor="Hand"
                                     Click="btnEdit_click">
                                <Button.Template >
                                    <ControlTemplate >
                                        <Image
                                                Source="/images/editBtnImg.png" 
                                                Width="25"
                                                VerticalAlignment="Center" 
                                                />      

                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Grid.Column="3"
                                    Cursor="Hand" 
                                    Click="btnDelete_click">
                                <Button.Template >
                                    <ControlTemplate >
                                        <Image 
                                                Source="/images/deleteBtnImg.png"
                                                Width="25"
                                                HorizontalAlignment="Left" />

                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                           
                        </Grid>
                        </Border>
                </Grid>
            </ListBoxItem>
            <DataTemplate.Triggers >
                <Trigger  SourceName="brd1" Property="IsMouseOver" Value="True" >
                    <Setter TargetName="brd1" Property="Background" Value="{StaticResource listItemBackgroundColorMHover }"  />
                </Trigger>
            </DataTemplate.Triggers>




        </DataTemplate>
    </UserControl.Resources>

    <Grid  >
        <ListBox  x:Name="lstCustomerView"
                  ItemTemplate="{StaticResource dtTemplate1 }"
                  Background="Transparent" 
                  BorderBrush="Transparent" >
            <ListBox.ItemContainerStyle >
                <Style TargetType="ListBoxItem" >
                    <Setter Property="HorizontalAlignment" Value="Stretch" />

                    <Setter Property="Width" Value="auto"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <Button Content="mfjnfdj" 
                Width="50"
                Height="50"
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Margin="0,0,30,30"
                Click="btnAdd_click"
                Cursor="Hand" >
            <Button.Template >
                <ControlTemplate >
                    <Image Source="/images/addBtnImg.png" 
                           Width="45"
                           />
                </ControlTemplate>
            </Button.Template>
            
        </Button>
    </Grid>
</UserControl>
    
