<UserControl x:Class="pharmacyManagement.screenControls.usersScreenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pharmacyManagement.screenControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="control_Loaded">

    <UserControl.Resources >
        <DataTemplate x:Key="dtTemplate1">

            <Grid  Background="Transparent" >
               
                    <ListBoxItem  Background="Transparent" 
                                      BorderBrush="Transparent" 
                                      Foreground="Transparent"
                                  BorderThickness="0"
                                  IsSelected="False" >
                        <Border Background="{StaticResource listItemBackgroundColor }"
                                    BorderBrush="{StaticResource PrimaryBlueColor }"
                        BorderThickness="2"
                        Height="40"
                        Width="700"
                        CornerRadius="12">
                            <Grid >
                                <Grid.ColumnDefinitions >
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width ="1*"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column ="0"
                            Content="{Binding Path=fullName}"
                            FontSize="12"
                               Margin="10,0,0,0"
                                       FontWeight="Bold" />
                                <Label Grid.Column="1"
                              Content="{Binding Path=phoneNumber}"
                              FontSize="12"
                               Margin="10,0,0,0"/>
                                <Label Grid.Column="2"
                            Margin="100,0,0,0"
                            Content="fjjfjvvvg"/>
                                <Label Grid.Column="3"
                               FontSize="14"
                               FontWeight ="Bold" 
                               Content="{Binding Path=jobTitle}"
                               Margin="10,0,0,0"
                                       />
                                <Button  Grid.Column="4"
                                          Cursor="Hand"
                                          Click="btnEdit_click">
                                    <Button.Template >
                                        <ControlTemplate >
                                            <Image
                                                     Source="/images/editBtnImg.png" 
                                                     Width="25"
                                                     VerticalAlignment="Center" 
                                                     /> 

                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Grid.Column="5"
                                         Cursor="Hand" 
                                         Click="btnDelete_click">
                                    <Button.Template >
                                        <ControlTemplate >
                                            <Image 
                                                     Source="/images/deleteBtnImg.png"
                                                     Width="25"
                                                     HorizontalAlignment="Left" />

                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>


                            </Grid>
                        </Border>

                    </ListBoxItem>
                    

            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid >
        <ListBox  x:Name="lstUsersView"
                  ItemTemplate="{StaticResource dtTemplate1 }"
                  Background="Transparent" 
                  BorderBrush="Transparent ">
        </ListBox>
        <Button
         Width="50"
         Height="50"
         HorizontalAlignment="Right" 
         VerticalAlignment="Bottom" 
         Margin="0,0,30,30"
         Click="btnAdd_click"
         Cursor="Hand" >
            <Button.Template >
                <ControlTemplate >
                    <Image Source="/images/addBtnImg.png" 
                    Width="45"
                    />
                </ControlTemplate>
            </Button.Template>

        </Button>

    </Grid>

</UserControl>
