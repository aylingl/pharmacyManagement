<UserControl x:Class="pharmacyManagement.screenControls.medicineScreenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pharmacyManagement.screenControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="control_Loaded">

    <UserControl.Resources >
        <DataTemplate x:Key="dtTemplate1">
            <Border CornerRadius="15"
                    Background="{StaticResource listItemBackgroundColor }"
                    BorderBrush="{StaticResource PrimaryBlueColor }"
                    x:Name="brd2"
                    BorderThickness="2"
                    Width="1000"
                    >
                <Grid  >
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>
                    
                            <Grid Grid.Column="0"
        >
                    <Grid.RowDefinitions >
                        <RowDefinition  />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                        <Grid  Grid.Row="0">

                            <Grid.ColumnDefinitions  >
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width ="2*"/>
                        </Grid.ColumnDefinitions>
                        <Label    Grid.Column="0"
                                  Content  ="{Binding Path = name}"
                                  Margin="10,0,0,0"
                                  FontWeight="Bold" />
                        <Label Grid.Column="1"
                                Content= "{Binding Path=type}"/>
                        <Label Grid.Column="2"
                                Content="{Binding Path=countNumber}"
                               FontWeight="Bold" />
                    </Grid>

                    <Grid Grid.Row="1" >
                        <Grid.ColumnDefinitions >
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="40"
                                             />
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Label  Grid.Column ="0"
                                  Content="{Binding  Path= companyName}"
                                  Margin="10,0,0,0"
                                FontWeight="Bold" />
                        <Label   Grid.Column ="1"
                                 FlowDirection="LeftToRight" 
                                 Margin="0,0,10,0"
                                 Content="{Binding Path=expirationDate}"/>

                           
                           
                        </Grid>

                </Grid>
                    <Grid  Grid.Column="1">
                        <Grid.ColumnDefinitions >
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Button  Grid.Column="0"
                                 Cursor="Hand" 
                                 Click="btnEdit_click"
                                 >
                            <Button.Template >
                                <ControlTemplate >
                                    <Image
                                            Source="/images/editBtnImg.png" 
                                            Width="25"
                                            VerticalAlignment="Center"
                                        HorizontalAlignment="Center" />

                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button  Grid.Column="1"
                                  Cursor="Hand" 
                                  Click="btnDelete_click"
                                  >
                            <Button.Template >
                                <ControlTemplate >
                                    <Image 
                                            Source="/images/deleteBtnImg.png"
                                            Width="25"
                                            HorizontalAlignment="Left" 
                                       VerticalAlignment="Center"  />
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

        </DataTemplate>

        <DataTemplate  x:Key="dtTemplate2">
            <Label  Content= "{Binding Path = name}"/>

        </DataTemplate>
        
    </UserControl.Resources>
    <Grid >
        <ListBox  x:Name="lstMedicineView"
                  ItemTemplate="{StaticResource dtTemplate1 }"
                  Background="Transparent" 
                  BorderBrush="Transparent ">
         </ListBox>
        <Button Content="mfjnfdj" 
         Width="50"
         Height="50"
         HorizontalAlignment="Right" 
         VerticalAlignment="Bottom" 
         Margin="0,0,30,30"
         Click="btnAdd_click"
         Cursor="Hand" >
            <Button.Template >
                <ControlTemplate >
                    <Image Source="/images/addBtnImg.png" 
                    Width="45"
                    />
                </ControlTemplate>
            </Button.Template>

        </Button>

    </Grid>

</UserControl>
