<UserControl x:Class="pharmacyManagement.screenControls.visitorTypeMedicineScreenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pharmacyManagement.screenControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="control_Loaded">


    <UserControl.Resources >
        <DataTemplate  x:Key="dtTemplate1">
            <Grid>
                <Grid Background="AliceBlue"    >
                    <ListBox >
                        <ListBoxItem >
                            <Border  Background="{StaticResource listItemBackgroundColor }"
                                    BorderBrush="{StaticResource PrimaryBlueColor }" 
                                    BorderThickness="2"
                                    Height=" 30"
                                    Width="700"
                                    CornerRadius="12">
                                <Grid >
                                    <Grid.ColumnDefinitions >
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column ="0"
                        Content="{Binding Path=type}"/>
                                    <Label Grid.Column="1"
                        Content="{Binding Path=phoneNumber}"
                               Margin="19,0,0,0"
                               FontWeight="Bold" />
                                    <Button  Grid.Column="2"
                                              Cursor="Hand"
                                              Click="btnEdit_click">
                                        <Button.Template >
                                            <ControlTemplate >
                                                <Image
                                                         Source="/images/editBtnImg.png" 
                                                         Width="25"
                                                         VerticalAlignment="Center" 
                                                         />

                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Grid.Column="3"
                                             Cursor="Hand" 
                                             Click="btnDelete_click">
                                        <Button.Template >
                                            <ControlTemplate >
                                                <Image 
                                                         Source="/images/deleteBtnImg.png"
                                                         Width="25"
                                                         HorizontalAlignment="Left" />

                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                </Grid>
                            </Border>
                        </ListBoxItem>
                    </ListBox>
                </Grid>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid >
        <ListBox  x:Name="lstVisitorTypeMedicineView"
                  ItemTemplate="{StaticResource dtTemplate1 }"
                  Background="Transparent" 
                  BorderBrush="Transparent ">
        </ListBox>
    </Grid>
    
</UserControl>
