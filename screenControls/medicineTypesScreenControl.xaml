<UserControl x:Class="pharmacyManagement.screenControls.medicineTypesScreenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pharmacyManagement.screenControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="control_Loaded">


    <UserControl.Resources >
        <DataTemplate x:Key="dtTemplate1">
            <Grid>
                <Grid Background="Azure"  >
                    <ListBox >
                        <ListBoxItem >
                            <Border  Background="{StaticResource listItemBackgroundColor }"
                                    BorderBrush="{StaticResource PrimaryBlueColor }"
                     BorderThickness="2"
                     Height=" 30"
                     Width="700"
                     CornerRadius="12">
                                <Grid >
                                    <Grid.ColumnDefinitions >
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column ="0"
                         Content="{Binding Path=type}"
                                FontSize="14"
                                FontWeight="Bold"
                                Margin="20,0,0,0"/>
                                </Grid>
                            </Border>
                            
                        </ListBoxItem>
                        
                    </ListBox>
                    
                </Grid>
                
            </Grid>
            
        </DataTemplate>
        
    </UserControl.Resources>
    <Grid >
        <ListBox  x:Name="lstMedicineTypeView"
                  ItemTemplate="{StaticResource dtTemplate1 }"
                  Background="Transparent" 
                  BorderBrush="Transparent ">
        </ListBox>
    </Grid>
    
</UserControl>
