<UserControl x:Class="pharmacyManagement.screenControls.visitorsScreenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pharmacyManagement.screenControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="control_Loaded">


    <UserControl.Resources >
        <DataTemplate x:Key="dtTemplate1" >
            <Grid Background="PowderBlue"   >
                <ListBox >
                    <ListBoxItem >
                        <Border  Background="{StaticResource listItemBackgroundColor }"
                                    BorderBrush="{StaticResource PrimaryBlueColor }" 
                    BorderThickness="2"
                    Height=" 30"
                    Width="700"
                    CornerRadius="12">
                            <Grid >
                                <Grid.ColumnDefinitions >
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="5*"
                                                      />
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column ="0"
                           Content="{Binding Path=fName}"
                           FontSize="14"
                           Margin="10,0,0,0"/>
                                <Label Grid.Column="1"
                           Content="{Binding Path=lName}"
                           Margin="10,0,0,0"/>
                                <Label Grid.Column="2"
                           Margin="100,0,0,0"
                           Content="{Binding Path=phoneNumber}"
                           FontSize="14"
                           FontWeight="Bold" />
                                <Button  Grid.Column="3"
                                          Cursor="Hand"
                                          Click="btnEdit_click">    
                                    <Button.Template >
                                        <ControlTemplate >
                                            <Image
                                                     Source="/images/editBtnImg.png" 
                                                     Width="25"
                                                     VerticalAlignment="Center" 
                                                     /> 

                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Grid.Column="4"
                                         Cursor="Hand" 
                                         Click="btnDelete_click">
                                    <Button.Template >
                                        <ControlTemplate >
                                            <Image 
                                                     Source="/images/deleteBtnImg.png"
                                                     Width="25"
                                                     HorizontalAlignment="Left" />

                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>



                            </Grid>
                        </Border>

                    </ListBoxItem>
                </ListBox>

            </Grid>
        </DataTemplate>

    </UserControl.Resources>
    <Grid >
        <ListBox  x:Name="lstVisitorsView"
                  ItemTemplate="{StaticResource dtTemplate1 }"
                  Background="Transparent" 
                  BorderBrush="Transparent ">  
        </ListBox>
        <Button  
                 Width="50"
                 Height="50"
                 HorizontalAlignment="Right" 
                 VerticalAlignment="Bottom" 
                 Margin="0,0,30,30"
                 Click="btnAdd_click"
                 Cursor="Hand" >
            <Button.Template >
                <ControlTemplate >
                    <Image Source="/images/addBtnImg.png" 
                            Width="45"
                />
                </ControlTemplate>
            </Button.Template>

        </Button>

    

    </Grid>
    
</UserControl>
    
