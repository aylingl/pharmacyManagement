<UserControl x:Class="pharmacyManagement.screenControls.visitorsScreenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pharmacyManagement.screenControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="control_Loaded">


    <UserControl.Resources >
        <DataTemplate x:Key="dtTemplate1" >
            <Grid Background="PowderBlue"   >
                <ListBox >
                    <ListBoxItem >
                        <Border Background="{ StaticResource screenBackgroundColor }"
                    BorderBrush="{StaticResource PrimaryBlueColor }" 
                    BorderThickness="2"
                    Height=" 30"
                    Width="700"
                    CornerRadius="12">
                            <Grid >
                                <Grid.ColumnDefinitions >
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="5*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column ="0"
                           Content="ayl"
                           FontSize="14"
                           Margin="10,0,0,0"/>
                                <Label Grid.Column="1"
                           Content="goli"
                           Margin="10,0,0,0"/>
                                <Label Grid.Column="2"
                           Margin="100,0,0,0"
                           Content="09124570698"
                           FontSize="14"
                           FontWeight="Bold" />


                            </Grid>
                        </Border>

                    </ListBoxItem>
                </ListBox>

            </Grid>
        </DataTemplate>

    </UserControl.Resources>
    <Grid >
        <ListBox  x:Name="lstVisitorsView"
                  ItemTemplate="{StaticResource dtTemplate1 }"
                  Background="Transparent" 
                  BorderBrush="Transparent ">  
        </ListBox>
    </Grid>
    
</UserControl>
    
